{
  "rules": {
    "required": 2,
    "from": [
      { "ref": "pid" },
      {
        "required": 1,
        "from": [
          { "ref": "pid_reduced" },
          { "ref": "residence_info" }
        ]
      }
    ]
  },
  "credentials": {
    "pid": {
      "format": "vc+sd-jwt",
      "vct_values": ["https://credentials.example.com/identity_credential"],
      "claims": [
        { "path": ["given_name"] },
        { "path": ["family_name"] },
        { "path": ["address", "street_address"] }
      ]
    },
    "pid_reduced": {
      "format": "vc+sd-jwt",
      "vct_values": ["https://credentials.example.com/identity_credential"],
      "claims": [
        { "path": ["family_name"] },
        { "path": ["given_name"] }
      ]
    },
    "residence_info": {
      "format": "vc+sd-jwt",
      "vct_values": ["https://credentials.example.com/residence_credential"],
      "claims": [
        { "path": ["postal_code"] },
        { "path": ["locality"] },
        { "path": ["region"] }
      ]
    }
  }
}